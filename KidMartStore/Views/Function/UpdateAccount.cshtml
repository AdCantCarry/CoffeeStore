@model KidMartStore.Models.Customer
@{
    ViewBag.Title = "UpdateAccount";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2 class="text-center mb-4">Cập Nhật Tài Khoản</h2>
    <div class="card p-4">
        @using (Html.BeginForm("UpdateAccount", "Function", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.ID_Customer)

            <div class="mb-3">
                <label class="form-label">Tên đăng nhập</label>
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Địa chỉ</label>
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label class="form-label">Giới tính</label>
                @Html.DropDownListFor(model => model.Gender,
                    new SelectList(new[] { "Nam", "Nữ", "Khác" }),
                    "-- Chọn giới tính --", new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Cập Nhật</button>
        }
    </div>
</div>
<style>
    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
    }

    .card {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: 500;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 10px 12px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        border-radius: 4px;
        transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .text-center {
        color: #333;
    }
